<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linear_layout"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:padding="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

               <TextView
                   android:id="@+id/enter_med_name"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/med_name"
                   android:layout_centerHorizontal="true"
                   android:textStyle="italic|bold"
                   android:textSize="20sp"
                   android:textColor="@color/colorPrimary"/>

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/enter_med_name"
                android:ems="10"
                android:inputType="text"
                android:hint="@string/med_name_edit" />

            <EditText
                android:id="@+id/edit_qty"
                android:layout_width="wrap_content"
                android:layout_below="@id/edit_name"
                android:layout_height="wrap_content"
                android:ems="5"
                android:inputType="number"
                android:hint="@string/qty" />
            <Button
                android:layout_width="match_parent"
                android:id="@+id/save_btn"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="6dp"
                android:layout_below="@id/edit_qty"
                android:text="s a v e"
                android:background="@color/colorAccent"
                android:elevation="6dp"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>